<!--            </LinearLayout>-->

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_tenspUd"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/vien"
            android:padding="15dp"
            android:hint="Tên sản phẩm"/>

        <Spinner
            android:id="@+id/spnhangxeUd"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            tools:ignore="TouchTargetSizeCheck" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_giaspUd"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/vien"
            android:padding="15dp"
            android:hint="Giá"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_loaixeUd"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/vien"
            android:padding="15dp"
            android:hint="Loại Xe"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chi Tiết Sản Phẩm:"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_mausacUd"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/vien"
            android:padding="15dp"
            android:hint="Màu Sắc"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_dongcoUd"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/vien"
            android:padding="15dp"
            android:hint="Động cơ"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_namsxUd"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/vien"
            android:padding="15dp"
            android:hint="Năm sản xuất"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_UpdateStory"
            android:background="@drawable/white_background"
            android:backgroundTint="#039E8F"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="Update"/>

    </LinearLayout>

</LinearLayout>