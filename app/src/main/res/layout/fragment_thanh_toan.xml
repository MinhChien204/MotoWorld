<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.ThanhToanFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="#00BCD4">
        <ImageButton
            android:id="@+id/imgbackthanhtoan"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00BCD4"
            android:src="@drawable/baseline_arrow_back_24"/>
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông Tin Thanh Toán"
            android:textSize="23dp"
            android:layout_marginLeft="30dp"
            />
    </LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông Tin Đơn Hàng"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/xemay"
            android:layout_marginLeft="12dp"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên xe:"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Năm sản xuất:"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Động cơ:"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Màu sắc:"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loại xe:"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hãng xe:"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txttenxett"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wave"/>
                <TextView
                    android:id="@+id/txtsanxuattt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2020"/>
                <TextView
                    android:id="@+id/txtdongcott"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="110cc"/>
                <TextView
                    android:id="@+id/txtmausactt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đen"/>
                <TextView
                    android:id="@+id/txtloaixett"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xe số"/>
                <TextView
                    android:id="@+id/txthangxett"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Honda"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textColor="#FF5722"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá Sản Phẩm:"
            android:textStyle="bold"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/txtGiaSanPhamtt"
            android:textColor="#FF5722"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20.000.000 đ"
            android:textStyle="bold"
            android:textSize="15dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin người mua"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:layout_marginLeft="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Số điện thoại:"
        android:textSize="18dp"/>
    <EditText
        android:id="@+id/edtSoDt"
        android:layout_marginLeft="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Vui Lòng Nhập Số Điện Thoại"/>

    <TextView
        android:layout_marginLeft="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Địa Chỉ:"
        android:textSize="18dp"/>
    <EditText
        android:id="@+id/edtDiaChi"
        android:layout_marginLeft="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Vui Lòng Nhập Địa Chỉ Nhận Hàng"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thanh Toán"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vui lòng thanh toán khi nhận hàng"
        android:textSize="18dp"
        android:textColor="#FF9800"/>

    <Button
        android:id="@+id/btnDatHangtt"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="Đặt Hàng"
        android:textColor="@color/black"
        android:textSize="23dp"
        android:backgroundTint="#00BCD4"/>


</LinearLayout>